<h1 class="list-title space">Edit Listing</h1>
 <div class="reg-style">
    <form method="POST" action="/registration/update/{{_id}}?method=PUT" enctype="multipart/form-data">

        <label for="title">Title</label>
        <input type="text" name="title" class="bar" value={{title}}>

         <div class="name-grd">
           <div>
                <label for="location">Location</label>
                <input type="text" name="location" class="bar" value="{{location}}">
           </div> 
           <div>
                <label for="postal">Postal Code</label>
                <input type="text" name="postal" class="bar" value="{{postal}}">
           </div>
        </div>

        <label for="description">Description</label>
        <input type="text" name="description" class="bar" value="{{description}}">

        <div class="name-grd">
           <div>
                <label for="price">Price</label>
                <input type="text" name="price" class="bar" value="{{price}}">
           </div> 
           <div>
                <div>
                    <label>Fetured</label>
                    <select name="fetured" >
                         <option value="yes" {{#if_eq fetured "yes"}}selected{{/if_eq}}>Yes</option>
                         <option value="no" {{#if_eq fetured "no"}}selected{{/if_eq}}>No</option>
                    </select>
                </div>
           </div>
        </div>

        <input type="submit" value="Edit" class="butt"> 
    </form>
 </div>